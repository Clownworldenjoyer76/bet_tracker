name: Soccer 02 Apply Juice

on:
  workflow_dispatch:

permissions:
  contents: write

jobs:
  apply-juice:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4
        with:
          fetch-depth: 0

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: "3.11"

      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install pandas

      - name: Run apply_juice.py
        run: |
          python docs/win/soccer/scripts/02_juice/apply_juice.py

      - name: Commit and push changes
        run: |
          git config user.name "github-actions"
          git config user.email "github-actions@github.com"

          git add docs/win/soccer/02_juice/
          git add docs/win/soccer/errors/02_juice/

          if git diff --cached --quiet; then
            echo "No changes to commit"
          else
            git commit -m "Soccer 02 Apply Juice - automated run"
            git push
          fi
